{
  "name": "es6-spa-seed",
  "version": "0.0.1",
  "description": "A seed project to gallivant with ES6 and distinguished microlibraries",
  "main": "server.js",
  "scripts": {
    "postinstall": "jspm install",
    "start": "node server.js",
    "build": "npm run bundle && npm run build:css",
    "bundle": "jspm bundle src/app public/dist/js/app-built.js",
    "build:css": "stylus public/css/style.styl --include node_modules/nib/lib --out public/dist/css",
    "watch:js": "watch 'npm run bundle' public/js/src",
    "watch:css": "watch 'npm run build:css' public/css"
  },
  "homepage": "https://github.com/twalker/es6-spa-seed",
  "repository": {
    "type": "git",
    "url": "https://github.com/twalker/es6-spa-seed.git"
  },
  "keywords": [
    "es6",
    "seed"
  ],
  "author": "twalker",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/twalker/es6-spa-seed/issues"
  },
  "devDependencies": {
    "6to5": "^3.4.1",
    "jspm": "^0.11.5",
    "nib": "^1.1.0",
    "stylus": "^0.50.0",
    "watch": "^0.13.0"
  },
  "dependencies": {},
  "jspm": {
    "directories": {
      "baseURL": "public/js",
      "lib": "public/js/src"
    }
  }
}
